<% layout("/layouts/boilerplate") -%>
<body>
    <h1>All Listings</h1>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%=listing._id %>" class="card-link">
                
                <div class="card col" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="Can`t Load Image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %> </b><br>
                        &#8377;<%=(typeof listing.price === 'number' ? listing.price.toLocaleString('en-IN') : listing.price) %></p>
        
                    </p>
                    </div>
                  </div>

            </a>
            
              <% } %>

    </div>
       
</body>

