<% layout("/layouts/boilerplate") -%>

    <h1 style="color: rgb(20, 138, 124);">Search Result :</h1>
   
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-xs-1 ">
        <% for (let listing of listings) { %>
            <a href="/listings/<%=listing._id %>" class="card-link">
                
                <div class="card col listing-card" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="Can`t Load Image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %> </b><br>
                        &#8377;<%=(typeof listing.price === 'number' ? listing.price.toLocaleString('en-IN') : listing.price) %></p>
        
                    </p>
                    </div>
                  </div>

            </a>
            
              <% } %>

    </div>
       


